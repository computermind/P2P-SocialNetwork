    "url": "https://github.com/mkapiczy/P2P-SocialNetwork/issues"
  },
  "homepage": "https://github.com/mkapiczy/P2P-SocialNetwork#readme",
  "dependencies": {
    "@types/node": "7.0.22",
    "async": "^2.5.0",
    "big-integer": "^1.6.25",
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "enum": "^2.4.0",
    "express": "4.15.3",
    "http-status-codes": "^1.2.0",
    "morgan": "^1.9.0",
    "node-rsa": "^0.4.2",
    "nodemon": "1.11.0",
    "path": "latest",
    "pug": "latest",
